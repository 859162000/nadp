<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.com.netease.nadp.monitor.dao.ConfigDao">
    <resultMap id="configVO" type="cn.com.netease.nadp.common.vo.ConfigVO">
        <result column="id" property="id" jdbcType="INTEGER" javaType="INTEGER" />
        <result column="key" property="key" />
        <result column="value" property="value" />
        <result column="create_date" property="createDate" />
    </resultMap>
    <select id="select" parameterType="String" resultMap="configVO"  >
        select * from nadp_config  config
        where 1=1
        <if test="key !=null and key!=''" >
            and config.key like CONCAT('%',#{key},'%' )
        </if>
    </select>
    <update id="update" >
        update nadp_config
        <set>
            value = #{value}
        </set>
        where
        <if test="id != null and id != ''">
            id=#{id}
        </if>
    </update>

    <insert id="insert">
        insert into nadp_config
        (`key`, value , description) values(#{key}, #{value},#{description})
    </insert>

</mapper>